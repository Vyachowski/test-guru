<%= link_to 'Назад', test_path %>

<h1><%= question_header @question.title %></h1>
<%= form_with model: @question, local: true do |form| %>
  <% if @question.errors.present? %>
    <div>
      <h2><%= pluralize(@question.errors.count, 'error') %> detected:</h2>
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :title %>

    <%= form.text_field :title, id :test_title %>
  </p>


  <p>
    <%= form.label :level %>

    <%= form.number_field :level, id: :test_level %>
  </p>
  <p>
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>