<%= link_to t("common.back"), admin_tests_path, class: "btn btn-secondary mb-2" %>

<h1 class="mb-2"><%= @test.title %></h1>
<p class="lead mb-4"><%= "#{t('.level')} - #{test_level @test}" %></p>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t('common.tables.name_column') %></th>
      <th scope="col" colspan="3"><%= t('common.tables.actions_column') %></th>
    </tr>
  </thead>

  <tbody>
  <%= render partial: 'admin/questions/question', collection: @test.questions %>
  </tbody>
</table>
