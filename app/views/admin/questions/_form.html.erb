<%= form_with model: [:admin, @test, @question], local: true, data: { turbo: false } do |form| %>
  <%= render "shared/errors", resource: question %>

  <fieldset class="mb-4">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, id: "question_body", rows: 4, required: true, class: "form-control" %>
  </fieldset>

  <div>
    <%= form.submit id: "submit_question", class: "btn btn-primary" %>
  </div>
<% end %>
