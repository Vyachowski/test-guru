<%= form_with model: [:admin, question], local: true, data: { turbo: false } do |form| %>
  <%= render "shared/errors", resource: question %>

  <fieldset>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: "question_body", rows: 4, required: true %>
  </fieldset>

  <div>
    <%= form.submit submit_text || "Сохранить вопрос", id: "submit_question" %>
  </div>
<% end %>
