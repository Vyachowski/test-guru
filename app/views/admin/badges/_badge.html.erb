<tr data-test-id=<%= badge.id %>>
  <td class="align-content-center">
    <div class="d-flex align-content-center" style="min-height: 3rem; min-width: 330px;">
      <span><%= badge.name %></span>
    </div>
  </td>
  <td class="align-content-center"><%= link_to t("common.actions.show"), admin_badge_path(badge), class: "btn btn-primary" %></td>
  <td class="align-content-center"><%= link_to t("common.actions.edit"), admin_badge_path(badge), class: "btn btn-secondary" %></td>
  <td class="align-content-center">
    <%= link_to t("common.actions.delete"),
        admin_badge_path(badge),
        data: { "turbo-method": :delete, turbo_confirm: t("common.actions.confirmation") },
        class: "btn btn-danger" %>
  </td>
</tr>
